                VerticalAlignment="Top"
                Source="/Images/Text/Question_1.png" />
            <Button
                Width="466"
                Height="469"
                Margin="57,0,0,0"
                Background="{x:Null}"
                Click="Button_Click_1"
                Foreground="{x:Null}">
                <Image
                    Width="428"
                    Height="472"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Images/Answer_1(a).png" />
